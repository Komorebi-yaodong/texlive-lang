   \endgroup \@efootnotemark}

\def\@efootnotemark{\leavevmode\ifhmode
  \edef\@x@sf{\the\spacefactor}\fi %\@makefnmark 
   \ifhmode\spacefactor\@x@sf\fi\relax}

