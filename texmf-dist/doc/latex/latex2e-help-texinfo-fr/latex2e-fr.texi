\begin@{tabbing@}
  \=souligne  \=\=\kill
  soulign\a'e\>
  \_@{@}\_@{@}\_@{@}\_@{@}\_@{@}\_@{@}\_@{@}\_@{@}\>
  barr\a'e\>@{--@}@{--@}@{--@}@{--@}@{--@}@{--@}\\
\end@{tabbing@}@}
@end example

